  <part id="d">
    <title>D</title>
    <item id="Dispatcher">
      <term>Dispatcher</term>
      <see>
        <id>Contracts</id>
        <text>Contracts</text>
      </see>
      <see>
        <id>Skins</id>
        <text>Skins</text>
      </see>
